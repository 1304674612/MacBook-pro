{
  "name": "macos-dev-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-language development workspace with spell checking",
  "scripts": {
    "prepare": "husky install",
    "spell": "cspell --no-progress '**/*.{md,txt,java,c,cpp,py,js,ts}'",
    "spell:staged": "cspell --no-progress --no-must-find-files"
  },
  "devDependencies": {
    "cspell": "^8.0.0",
    "husky": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
